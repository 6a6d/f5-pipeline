{
    "$schema": "https://raw.githubusercontent.com/F5Networks/f5-appsvcs-extension/master/schema/latest/as3-schema-3.9.0-3.json",
    "class": "ADC",
    "schemaVersion": "3.9.0",
    "id": "{{tenant_name}}_domain",
    "label": "{{tenant_name}} GLSB configuration",
    "remark": "GSLB configuration",
    "controls": {
        "class": "Controls",
        "trace": true,
        "logLevel": "debug"
    },
    "Common": {
        "class": "Tenant",
        "label": "Main GSLB tenant",
        "Shared": {
            "class": "Application",
            "template": "shared",
            "regionGSLBUnknown": {
                "class": "GSLB_Topology_Region",
                "members": [
                    {
                        "matchType": "continent",
                        "matchOperator": "equals",
                        "matchValue": "--"
                    }
                ]
            },
            "regionGSLB": {
                "class": "GSLB_Topology_Region",
                "members": [
                    {
                        "matchType": "continent",
                        "matchOperator": "equals",
                        "matchValue": "SA"
                    },
                    {
                        "matchType": "country",
                        "matchOperator": "not-equals",
                        "matchValue": "DE"
                    },
                    {
                        "matchType": "datacenter",
                        "matchOperator": "equals",
                        "matchValue": {
                            "bigip": "/Common/DC1"
                        }
                    },
                    {
                        "matchType": "pool",
                        "matchOperator": "equals",
                        "matchValue": {
                            "bigip": "/Common/pool_a"
                        }
                    },
                    {
                        "matchType": "geoip-isp",
                        "matchOperator": "not-equals",
                        "matchValue": "some-geolocation-isp-value"
                    },
                    {
                        "matchType": "isp",
                        "matchOperator": "equals",
                        "matchValue": "Comcast"
                    },
                    {
                        "matchType": "region",
                        "matchOperator": "not-equals",
                        "matchValue": {
                            "bigip": "/Common/def_region"
                        }
                    },
                    {
                        "matchType": "state",
                        "matchOperator": "equals",
                        "matchValue": "US/New Hampshire"
                    },
                    {
                        "matchType": "state",
                        "matchOperator": "equals",
                        "matchValue": "US/Pennsylvania"
                    },
                    {
                        "matchType": "subnet",
                        "matchOperator": "equals",
                        "matchValue": "192.168.3.0/28"
                    }
                ]
            }
        }
    }
}